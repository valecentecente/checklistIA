rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    // Admin check: Prioridade total para e-mails Master via Token (Blindagem Nível 1)
    // Adicionado ricardo029@gmail.com com suporte a case-insensitive para maior segurança
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email.matches('(?i)itensnamao@gmail.com') ||
        request.auth.token.email.matches('(?i)admin@checklistia.com') ||
        request.auth.token.email.matches('(?i)ricardo029@gmail.com') ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin_l1', 'admin_l2'])
      );
    }

    match /users/{userId} {
      // Permitir criar o próprio perfil se logado
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      // Regra de Listagem: Se o e-mail estiver no token master, permite listar tudo
      allow list: if isAdmin();
      
      // Regras de Documento Individual
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow update: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
      
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    match /users_public/{email} {
      allow read: if true;
      allow write: if isSignedIn();
      allow list: if isAdmin();
    }

    match /global_recipes/{recipeId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    match /offers/{offerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /sales_opportunities/{opportunityId} {
      allow read, write: if isAdmin();
    }

    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow delete: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }

    match /admin_invites/{inviteId} {
      allow read: if isSignedIn();
      allow create: if isAdmin();
      allow update: if isSignedIn();
    }

    match /admin_logs/{logId} {
      allow read, create: if isAdmin();
    }
    
    match /shared_lists/{listId} {
      allow read: if true;
      allow create: if isSignedIn();
    }
    
    match /feedbacks/{feedbackId} {
      allow create: if true;
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}