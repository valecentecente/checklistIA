
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    // Função Admin Blindada: E-mail do dono é checado PRIMEIRO.
    // Isso garante acesso mesmo que o documento em /users/ não exista.
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'itensnamao@gmail.com' ||
        request.auth.token.email == 'admin@checklistia.com' ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin_l1', 'admin_l2'])
      );
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow read: if isAdmin();
      
      match /{allSubcollections=**} {
        allow read, write: if request.auth.uid == userId;
        allow read: if isAdmin();
      }
    }

    match /users_public/{email} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /global_recipes/{recipeId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    match /offers/{offerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /sales_opportunities/{opportunityId} {
      allow read, write: if isAdmin();
    }

    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow delete: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }

    match /admin_invites/{inviteId} {
      allow read: if isSignedIn();
      allow create: if isAdmin();
      allow update: if isSignedIn();
    }

    match /admin_logs/{logId} {
      allow read, create: if isAdmin();
    }
    
    match /shared_lists/{listId} {
      allow read: if true;
      allow create: if isSignedIn();
    }
    
    match /feedbacks/{feedbackId} {
      allow create: if true;
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}